@model UserAccount

<body>
    

<section class="pt-5">
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <img src="~/img/login-img.jfif" alt="sign up phhoto" class="sign-img">
            </div>
            <div class="col-md-6">
                <h2 class="mb-3">Sign Up</h2>
                <div class="facebook-login mb-3 d-flex ">
                    <div class="d-flex align-items-center">
                        <i class="fab fa-facebook-square  text-white mr-3 ml-1 "></i>
                        <p class="text-white">Sign Up with Facebook</p>
                    </div>
                </div>
                <div class="twitter-login  d-flex mb-3">
                    <div class="d-flex align-items-center">
                        <i class="fab fa-twitter text-white mr-3 ml-1 "></i>
                        <p class="text-white">Sign Up with Twitter</p>
                    </div>
                </div>
                <div class="google-login  d-flex ">
                    <div class="d-flex align-items-center">
                        <i class="fab fa-google text-white mr-3 ml-1 "></i>
                        <p class="text-white">Sign Up with Google</p>
                    </div>
                </div>

                <hr class="my-4">

                <form asp-action="RegisterAction" id="form">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="Firstame" class="font-weight-bold">Firstname</label>
                            <input type="text" name="name" class="form__input form__input--sign-up d-block" id="firstName" required minlength="3">
                            @* <small>error message</small> *@
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="Lastname" class="font-weight-bold">Lastname</label>
                            <input type="text" name="name" class="form__input form__input--sign-up d-block" id="lastName" required minlength="3">
                             @* <small>error message</small> *@
                        </div>
                        <div class="col form-group mb-4">
                            <label for="Lastname" class="font-weight-bold">Birth day</label>
                            <input type="date" name="name" class="form__input form__input--sign-up d-block" id="birthDay" required max="2010-12-31">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-flex flex-column">
                            <label for="Username" class="font-weight-bold">Email </label>
                            <input asp-for="Username" type="email" name="Username" id="Username" 
                                class="form__input form__input--sign-up d-block" required >
                                @* <small>error message</small> *@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-flex flex-column">
                            <label for="password" class="font-weight-bold">Password</label>
                            <input asp-for="Password" type="password" name="Password" id="Password" 
                                class="form__input form__input--sign-up d-block" required minlength="8">
                                @* <small>error message</small> *@
                        </div>
                    </div>
                    
                    <button class="btn btn-outline-dark w-100 mt-4" type="submit" placeholder="Register">Sign
                        Up</button>
                </form>
            </div>
        </div>
    </div>
</section>
</body>